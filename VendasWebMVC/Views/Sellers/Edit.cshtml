@model VendasWebMVC.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Seller.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Seller.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Aniversário</label>
                <input asp-for="Seller.BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label>Salário</label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Departamento</label>
                <select asp-for="Seller.DepartamentId" asp-items="@(new SelectList(Model.Departaments,"Id","Name"))" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>

        </form>
    </div>

</div>


